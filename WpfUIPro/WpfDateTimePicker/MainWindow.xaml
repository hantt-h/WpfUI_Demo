<Window x:Class="WpfDateTimePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDateTimePicker"
         xmlns:controls="clr-namespace:WpfDateTimePicker.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="设置默认时间" FontSize="14" Foreground="#606266" Margin="0,0,0,8"/>
            <controls:DateTimePicker x:Name="DateTimePicker" Width="300" SelectedDateTime="{Binding BeginTime}"  />
            <TextBlock x:Name="SelectedDateTimeText" Margin="0,20,0,0" FontSize="14" Foreground="#303133"/>
            <Button   Width="100" Height="50"/>

        </StackPanel>
    </Grid>
</Window>
